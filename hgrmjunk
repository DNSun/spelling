#!/bin/sh
# ~/bin/hgrmjunk
# Delete files that are generally not useful for spellchecking
SPECS="
'*.cer'
'*.class'
'*.crl'
'*.crt'
'*.csr'
'*.dll'
'*.eot'
'*.exe'
'*.gif'
'*.gz'
'*.icns'
'*.ico'
'*.jar'
'*.jpg'
'*.key'
'*.lock'
'*.lib'
'*.map'
'*.min.*'
'*.otf'
'*.pdf'
'*.pem'
'*.png'
'*.sig'
'*.so'
'*SUMS'
'*.svg'
'*.tar'
'*.tgz'
'*.ttf'
'*.woff*'
'*.xpm'
'*.yml'
'*.zip'
'package-lock.json'
"
hg locate -0 $(eval echo $SPECS)  | xargs -0 hg rm 2>&1|uniq
